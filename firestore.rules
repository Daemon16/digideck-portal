rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own profile data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Meta sets are read-only for all users
    match /metaSets/{document} {
      allow read: if true;
      allow write: if false;
    }
    
    // Meta decks are read-only for all users
    match /metaDecks/{document} {
      allow read: if true;
      allow write: if false;
    }
    
    // Cards are read-only for all users
    match /cards/{document} {
      allow read: if true;
      allow write: if false;
    }
    
    // Sets are read-only for all users
    match /sets/{document} {
      allow read: if true;
      allow write: if false;
    }
  }
}